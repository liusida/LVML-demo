<component>
  <view width="100%" height="100%"
        style_pad_all="0" 
        style_margin_all="0"
        style_border_width="0">
    <!-- Colored background panel with button inside -->
    <lv_obj x="0" y="0" width="320" height="240" 
            style_bg_color="0x226622" 
            style_radius="0"
            style_pad_all="0" >
      
      <!-- Title label -->
      <lv_label x="110" y="50" text="Step 3" style_text_color="0xFFFFFF" />
      
      <!-- Subtitle -->
      <lv_label x="80" y="80" text="Final Destination!" style_text_color="0xFFFFFF" />
      
      <!-- Navigation buttons -->
      <lv_button x="50" y="120" 
                 width="80" height="40"
                 style_bg_color="0x007AFF" 
                 style_radius="8">
        <lv_label text="Back" style_text_color="0xFFFFFF" align="center"/>
        <lv_event-call_function trigger="clicked" callback="load_screen" user_data="step2.xml"/>
      </lv_button>
      
      <lv_button x="190" y="120" 
                 width="80" height="40"
                 style_bg_color="0x007AFF" 
                 style_radius="8">
        <lv_label text="Home" style_text_color="0xFFFFFF" align="center"/>
        <lv_event-call_function trigger="clicked" callback="load_screen" user_data="main.xml"/>
      </lv_button>

    </lv_obj>
  </view>
</component>
